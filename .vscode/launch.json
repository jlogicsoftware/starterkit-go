  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/app/main.go",
      "args": [],
      "env": {
        "ENV": "development"
      },
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose",
      "debugAdapter": "dlv-dap",
      "showGlobalVariables": true
    },
    {
      "name": "Local attach",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose",
      "debugAdapter": "dlv-dap",
      "showGlobalVariables": true,
      "processId": "main"
    },
    {
      "name": "Go in Container",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      // "remotePath": "./go/src/cmd",
      "port": 2345,
      "host": "localhost",
      // "cwd": "${workspaceRoot}/cmd"
      "showLog": true,
      "apiVersion": 2,
      "trace": "verbose"
    }
  ]
}
